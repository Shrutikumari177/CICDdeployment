<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <Dialog id="_IDDialog" title="Vendor Details" class="sapUiSmallMargin" contentHeight="400px" contentWidth="50%">
        <content>
            <VBox class="flexbox-container">
                <FlexBox class="flexbox">
                    <!-- Vendor Details Section -->
                    <Panel headerText="Vendor Detail" class="sapUiResponsiveMargin">
                        <form:SimpleForm columnsL="1" columnsM="1" editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3">
                            <Label text="Vendor Name " />
                            <Text text="{vendorDetail>/Name1}" />
                            <Label text="Title " />
                            <Text text="{vendorDetail>/Anred}" />
                            <Label text="Language " />
                            <Text text="{vendorDetail>Spras}" />
                            <Label text="Telephone1 " />
                            <Text text="{vendorDetail>/Telf1}" />
                            <Label text="Telephone2 " />
                            <Text text="{vendorDetail>/Telf2}" />
                            <Label text="Fax No " />
                            <Text text="{vendorDetail>/Telfx}" />
                        </form:SimpleForm>
                    </Panel>
                </FlexBox>
                <FlexBox class="flexbox">
                    <!-- Vendor Address Details Section -->
                    <Panel headerText="Vendor Address Details" class="sapUiResponsiveMargin">
                        <form:SimpleForm columnsL="1" columnsM="1" editable="false" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3">
                            <Label text="Address " />
                            <Text text="{vendorDetail>/Adrnr}" />
                            <Label text="Street" />
                            <Text text="{vendorDetail>/Stras}" />
                            <Label text="Postal Code " />
                            <Text text="{vendorDetail>/Pstlz}" />
                            <Label text="City " />
                            <Text text="{vendorDetail>/Ort01}" />
                            <Label text="Country" />
                            <Text text="{vendorDetail>/Land1}" />
                        </form:SimpleForm>
                    </Panel>
                </FlexBox>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar2">
                <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                <Button id="_IDGenButto" text="Close" press="oncancell" />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
